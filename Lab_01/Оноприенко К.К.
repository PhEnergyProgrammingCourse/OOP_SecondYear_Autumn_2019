#include <iostream>
#include <string>
#include <cmath>
#include <cstdio>
using namespace std;


int main()
{
    int f1, f2, la1, la2, d, L, R;
     cout << "dolg 1 = ";
     cin>>f1;
     cout << "dolg 2 = ";
     cin >> f2;
     cout << "shir 1 = ";
     cin >> la1;
     cout << "shir 2 = ";
     cin >> la2;
    d=40000;
    R=d/(2*3.14);
    L=2*R*asin(sqrt((sin((f1-f2)*3.14/360))*(sin((f1-f2)*3.14/360))+cos(f1*3.14/180)*cos(f2*3.14/180)*(sin((la1-la2)*3.14/360))*(sin((la1-la2)*3.14/360))));
    cout << "rasstoyanie = " << L;
    return 0;
}
